<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.personalfinance_v01">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_main"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_main"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/home"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddExpensesActivity"
            android:label=""
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".HistoryActivity"
            android:label="@string/activityHistory"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".AccountListActivity"
            android:label="@string/accounts"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".CreateAccountActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="@string/createAccount"
            android:parentActivityName=".AccountListActivity" />
    </application>

</manifest>