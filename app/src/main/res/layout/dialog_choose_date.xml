<?xml version="1.0" encoding="utf-8"?>
<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialogDateRadioGroup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <RadioButton
        android:id="@+id/dialogDateRadioBtnAll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/all" />

    <RadioButton
        android:id="@+id/dialogDateRadioBtnDat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/day" />

    <RadioButton
        android:id="@+id/dialogDateRadioBtnWeek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/week" />

    <RadioButton
        android:id="@+id/dialogDateRadioBtnMonth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/month" />

    <RadioButton
        android:id="@+id/dialogDateRadioBtnYear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/year" />

    <RadioButton
        android:id="@+id/dialogDateRadioBtnCustom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/custom" />

</RadioGroup>