<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/itemDebtFromTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:text="Me"
            android:textSize="@dimen/debt_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:text="@string/line"
            android:textSize="@dimen/debt_text" />

        <TextView
            android:id="@+id/itemDebtToTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Joe"
            android:textSize="@dimen/debt_text" />

    </LinearLayout>

    <TextView
        android:id="@+id/itemDebtInitialAmountTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:text="Initial amount: 3000"
        android:textSize="@dimen/debt_text" />

    <TextView
        android:id="@+id/itemDebtPaidBackAmountTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:text="Paid back: 2000"
        android:textSize="@dimen/debt_text" />

    <TextView
        android:id="@+id/itemDebtRemainingAmountTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:text="Remaining: 1000"
        android:textSize="@dimen/debt_text" />

    <TextView
        android:id="@+id/itemDebtStartDateTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:text="Start date"
        android:textSize="@dimen/debt_text" />

    <TextView
        android:id="@+id/itemDebtEndDateTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:text="End date"
        android:textSize="@dimen/debt_text" />

</LinearLayout>