<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@color/textGrey"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:id="@+id/historyMoneyAmountLinLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:padding="4dp">

        <TextView
            android:id="@+id/historySignTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:gravity="center_vertical"
            android:text="!"
            android:textColor="@color/textDark"
            android:textSize="@dimen/category_text" />

        <TextView
            android:id="@+id/historyMoneyAmountTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="140"
            android:textColor="@color/textDark"
            android:textSize="@dimen/category_text" />

        <TextView
            android:id="@+id/historyCurrencyTypeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dp"
            android:gravity="center_vertical"
            android:text="Currency"
            android:textColor="@color/textDark"
            android:textSize="@dimen/category_text" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp">

        <ImageView
            android:id="@+id/hisoryCategoryImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_goals" />

        <TextView
            android:id="@+id/historyCategoryTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Free time"
            android:textColor="@color/textDark"
            android:textSize="16sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/historyDateTimeTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="4dp"
        android:text="Wed, 18 June, 2002, 15:44"
        android:textColor="@color/textDark"
        android:textSize="16sp" />
</LinearLayout>